# --------------------------------------------------------------------------
# 1. Vendor, Dependencies, and Generated Files
# --------------------------------------------------------------------------
# Composer vendor directory (dependencies are installed with 'composer install')
/vendor/
/web/bundles/
/node_modules/
/web/build/ # For Webpack Encore or other asset building output

# --------------------------------------------------------------------------
# 2. Symfony Runtime Directories (Cache, Logs, Sessions)
# --------------------------------------------------------------------------
# The 'var' directory contains runtime files (cache, logs, sessions, etc.)
# Symfony 3.x uses /var, which should generally be ignored entirely.
/var/
# The only exception is .gitkeep if you choose to keep the directory structure
!/var/.gitkeep

# --------------------------------------------------------------------------
# 3. Environment and Local Configuration
# --------------------------------------------------------------------------
# Environment variables containing secrets and local machine settings
# The .dist file *should* be committed, but the .yml file should not.
/app/config/parameters.yml
/web/config.php

# --------------------------------------------------------------------------
# 4. Dev/Testing/Profiling
# --------------------------------------------------------------------------
# PHPUnit cache files
.phpunit.result.cache

# Development tools and IDE-specific files
.idea/
.vscode/
.DS_Store
Thumbs.db

# Blackfire (if used for profiling)
.blackfire.log

# --------------------------------------------------------------------------
# 5. Asset/Upload Folders (Optional)
# --------------------------------------------------------------------------
# Files uploaded by users or generated by uploaders
# Uncomment this if you have an 'uploads' directory
# /web/uploads/

# --------------------------------------------------------------------------
# 6. Legacy/Pre-Symfony 3.x Cache/Logs (Just in case)
# --------------------------------------------------------------------------
# Old cache/log directories
/app/cache/*
/app/logs/*
!/app/cache/.gitkeep
!/app/logs/.gitkeep
